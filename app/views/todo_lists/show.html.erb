<%= link_to 'Back', todo_lists_path, class: 'btn btn-secondary mb-3' %>
<div class="card">
  <div class="card-body">
    <h2><%= @todo_list.name %></h2>
      <div class="show_actions">
        <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-light' %>
        <%= link_to 'Destroy', @todo_list, method: :delete, class: 'btn btn-dark', data: { confirm: 'Are you sure?' } %>
      </div>

    <div class="mb-4">
      <h6>Add task</h6>
      <%= form_for([@task.todo_list, @task]) do |f| %>
        <% if @task.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

            <ul>
            <% @task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.hidden_field :status, value: 'not-started' %>
        <div class="input-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter task name...' %>
          <div class="input-group-append">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>

    <h4>Tasks</h4>
    <div data-controller="tasks">
      <ul id='tasks-list' data-action="drop->tasks#sort">
        <% @todo_list.tasks.order(position: :asc).each do |task| %>
          <% if task.persisted? %>
            <li class='task-item' data-task-id="<%= task.id %>">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div class='task-status mb-3'>
                      <i class="fas fa-grip-vertical grip text-secondary mr-1"></i>
                      <%= render(ProgressBadgeComponent.new(status: task.status)) %>
                    </div>
                    <div>
                      <div class="dropdown float-left">
                        <button class="btn btn-sm mr-1 btn-outline-<%= task.color_class %> dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= task.readable_status %>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                          <% Task::STATUS_OPTIONS.each do |status| %>
                            <a class="dropdown-item" href="#"
                            data-reflex="click->StatusReflex#change"
                            data-id="<%= task.id %>"
                            data-status="<%= status[1] %>">
                              <%= status[0] %>
                            </a>
                          <% end %>
                        </div>
                      </div>
                      <%= link_to edit_todo_list_task_path(task.todo_list, task), class: 'btn btn-light btn-sm' do %>
                        <i class='far fa-edit'></i>
                      <% end %>
                      <%= link_to [task.todo_list, task], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-dark btn-sm' do %>
                        <i class='fas fa-trash'></i>
                      <% end%>
                    </div>
                  </div>
                  <p><%= task.description %></p>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>

  </div>
</div>
