<div class="index_wrapper">
  <header class="index_header">
    <h1 class="logo">Tasks</h1>
    <nav class="index_nav_container">
      <ul>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-power-off"></i>
        <% end %>
      </ul>
    </nav>
  </header>
  <section class="new_list_section">
    <h2>My lists</h2>
    <%= link_to '+ New List', new_todo_list_path, class: 'new_task_btn' %>
  </section>

  <main class="index_main_wrapper">
    <% @todo_lists.each do |todo_list| %>
      <div class="index_card_container">
        <div class="index_card_item">
          <h1><%= todo_list.title %></h1>
          <span class="badge badge-<%= todo_list.badge_color %>"><%= todo_list.status %></span>
          <p class="completed-tasks"><small><%= todo_list.percent_complete %> ( <%= todo_list.completed_tasks %> / <%= todo_list.total_tasks %> Tasks )</small></p>
          <%= link_to todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'index_delete_btn' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </main>
</div>