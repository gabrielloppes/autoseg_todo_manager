<header class="index-header">
  <h1>Todo Lists</h1>
  <%= link_to 'New List', new_todo_list_path, class: 'new_task_btn' %>
</header>

<main>
  <% @todo_lists.each do |todo_list| %>      
    <div class="card-container-index">
      <div class="card-items-index">
        <h2><%= todo_list.title %></h2>
        <div class="card-actions-index">
          <%= link_to @todo_list do %>
            <i class="far fa-eye"></i>
          <% end %>
          <%= link_to edit_todo_list_path(todo_list) do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to todo_list, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</main>