<main class="new_registration_wrapper">
  <h1 class="new_registration_logo">Todo.io</h1>
  <div class="new_registration_form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2>Sign Up</h2>
      <section class="login-fields">
        <div class="name-field">
          <%= f.text_field :name, placeholder: 'Nome', autofocus: true %>
        </div>
        <div class="email-field">
          <%= f.email_field :email, placeholder: 'Email', autocomplete: "email" %>
        </div>
        <div class="password-confirmation-field">
          <%= f.password_field :password,placeholder: 'Senha com mÃ­nimo de 6 caracteres' , autocomplete: "new-password" %>
        </div>
        <div class="password-field">
          <%= f.password_field :password_confirmation, placeholder: 'Repita a senha', autocomplete: "new-password" %>
        </div>
      </section>
      <div class="new_session_sign_up_wrapper">
        <%= f.submit "Sign Up" %>
      </div>
    <% end %>
  </div>
  <div class="sign_up_link">
    <p>
      Already have an account? <%= render "devise/shared/sign_in" %>
    </p>
  </div>
  <%= image_tag 'https://images.pexels.com/photos/2444429/pexels-photo-2444429.jpeg?cs=srgb&dl=pexels-chris-czermak-2444429.jpg&fm=jpg' %>
</main>